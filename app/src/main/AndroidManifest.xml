            </intent-filter>
        </activity>

        <activity
            android:name=".AddEtudiant"
            android:label="Afficher Étudiants"
            android:exported="false">
        </activity>
        <activity
            android:name=".Etudiant_Detail"
            android:label="Afficher Étudiants"
